
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/600x400/?drink,#{@cocktail.name});">
    <h1> Cocktails </h1>
  </div>
  <div class="container">
    <%= link_to "Add a new cocktail", new_cocktail_path(@cocktail), class: "button btn btn-success" %>
    <% @cocktails.each do |cocktail| %>

        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/400x300/?drink,#{@cocktail.name});">
          <ul>
            <li> <h2> <%= cocktail.name %> </h2>
            <p> <%= link_to "details", cocktail_path(cocktail) %> </p> </li>
          </ul>
        </div>
  <% end %>

</div>
